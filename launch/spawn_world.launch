<launch>
  <!-- SETTINGS -->
  <!-- World file to launch (excluding the .world extension) -->
  <arg name="world" default="baby_steps" />
  <!-- Robot Spawn position -->
  <arg name="init_x" default="0.0" />
  <arg name="init_y" default="0.0" />
  <arg name="init_Y" default="0.0" /> <!-- Yaw; Rotation in radians. -->
  <!-- Goal Position -->
  <arg name="goal_x" default="7.33"/>
  <arg name="goal_y" default="1.75"/>

  <!-- Launch empty Gazebo world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <!-- Set .world file -->
    <arg name="world_name" value="$(find uml_3d_race)/worlds/$(arg world).world"/>
    <!-- Gazebo Settings -->
    <arg name="paused" value="false" />
    <arg name="use_sim_time" value="true" />
    <arg name="gui" value="true" />
    <arg name="headless" value="false" />
    <arg name="debug" value="false" />
  </include>

<!-- Spawn robot -->
  <include file="$(find uml_3d_race)/launch/spawn_robot.launch">
    <arg name="x" value="$(arg init_x)" />
    <arg name="y" value="$(arg init_y)" />
    <arg name="Y" value="$(arg init_Y)" />
  </include>

  <!-- Publish the goal for the given .world -->
  <node name="goal_publisher" pkg="uml_3d_race" type="goal_publisher" output="screen">
    <param name="goal_x" value="$(arg goal_x)" />
    <param name="goal_y" value="$(arg goal_y)" />
  </node>
</launch>
